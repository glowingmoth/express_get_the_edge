<script>
  document.addEventListener("DOMContentLoaded", function(){
    console.log("here");
    document.getElementById("crawler").addEventListener('click', (e) => {
      e.preventDefault();
      axios.get('api/crawl/start')
        .then(console.log);

      setInterval(() => {
        axios.get('/api/crawl/check')
          .then(res => {
